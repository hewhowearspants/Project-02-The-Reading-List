<% include ../partials/boilerplate %>
<% include ../partials/nav {user: user} %>
<div class='container'>
  <div class='add-container'>
    <div class='search-container'>
      <form class='book-request' id='add-book-request' method='GET'>
        <input type='text' name='query' placeholder='Title or Author' required />
        <button type='submit' id='book-request-button'>
          <i class="fa fa-search" aria-hidden="true"></i>
        </button>
      </form>
    </div>
    <div class='divider'>
      <h2>OR</h2>
    </div>
    <div class='input-container'>
      <form method='POST' action='/books'>
        <input name='title' type='text' placeholder='title' required />
        <input name='author' type='text' placeholder='author' />
        <div class='year-genre'>
          <input name='year' type='text' maxlength="4" size="4" placeholder='year' />
          <input name='genre' type='text' placeholder='genre' />
        </div>
        <textarea name='description' type='text' placeholder='description'></textarea>
        <button id='book-submit-button' type='submit'>
          <i class="fa fa-share" aria-hidden="true"></i><i class="fa fa-book" aria-hidden="true"></i>
        </button>
      </form>
      <div class='back'>
        <a href='/books' id='back-button'>Back to the List</a>
      </div>
    </div>
  </div>
</div>
<% include ../partials/end %>