<% include ../partials/boilerplate %>
<% include ../partials/nav {user: user} %>
<div class='container'>
  <div class='unread-book-container'>
  <% if (unreadBooks.length === 0) { %>
    <h1>You have no books to read! :(</h1>
  <% } else { %>
    <h2>Unread:</h2>
  <% } %>
  <% for (let book of unreadBooks) { %>
    <div class='book'>
      <div class='book-top'>
        <h3 id='title'><%= book.title %></h3>
        <h3 id='author'><%= book.author %></h3>
      </div>
      <div class='book-bottom'>
        <p id='year'><%= book.year %></p>
        <div class='links'>
          <% if (book.read === false) { %><a href='/books/<%= book.id %>/done'>Mark Read</a><% } %>
          <% if (book.read === true) { %><a href='/books/<%= book.id %>/not-done'>Mark Unread</a><% } %>
          <a href='/books/<%= book.id %>'>Info</a>
          <a href='/books/<%= book.id %>/edit'>Edit</a>
          <form method='POST' action='/books/<%= book.id %>?_method=DELETE'>
            <input type='submit' value='DELETE' />
          </form>
        </div>
      </div>
    </div>
  <% } %>
  </div>

  <div class='read-book-container'>
  <% if (readBooks.length === 0) { %>
    <h1>You have read no books! :(</h1>
  <% } else { %>
    <h2>Read:</h2>
  <% } %>
  <% for (let book of readBooks) { %>
    <div class='book'>
      <div class='book-top'>
        <h3 id='title'><%= book.title %></h3>
        <h3 id='author'><%= book.author %></h3>
      </div>
      <div class='book-bottom'>
        <p id='year'><%= book.year %></p>
        <div class='links'>
          <% if (book.read === false) { %><a href='/books/<%= book.id %>/done'>Mark Read</a><% } %>
          <% if (book.read === true) { %><a href='/books/<%= book.id %>/not-done'>Mark Unread</a><% } %>
          <a href='/books/<%= book.id %>'>Info</a>
          <a href='/books/<%= book.id %>/edit'>Edit</a>
          <form method='POST' action='/books/<%= book.id %>?_method=DELETE'>
            <input type='submit' value='DELETE' />
          </form>
        </div>
      </div>
    </div>
  <% } %>
  </div>
</div>
<% include ../partials/end %>